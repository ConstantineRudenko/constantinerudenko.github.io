{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"lib": ["esnext", "dom", "dom.iterable"],
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@vitepress/*": ["./.vitepress/*"],
			"@theme/*": ["./.vitepress/theme/*"],
			"@pages/*": ["./pages/*"]
		}
	},
	"include": ["**/*", "./.vitepress/**/*"]
}
